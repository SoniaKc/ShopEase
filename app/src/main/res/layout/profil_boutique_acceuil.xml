<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Status Bar -->
    <View
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top bar -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/top_tool_bar_boutique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topPanel" />

    <!-- Image profil -->
    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/picture_client"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="@drawable/circle_background"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>


    <!-- Titre -->
    <TextView
        android:id="@+id/titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/aProposTitre"
        android:textSize="16sp"
        android:textColor="#1E1E1E"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/profilePhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Texte principal dans un ScrollView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="#F2EAFB"
        app:layout_constraintTop_toBottomOf="@id/titre"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Item: Mes Informations -->
            <LinearLayout
                android:id="@+id/infos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="@string/mesInfos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mesInfos"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: Mes Produits -->
            <LinearLayout
                android:id="@+id/btnMyProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_products"
                    android:contentDescription="@string/mesProduits" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mesProduits"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: Historique des ventes -->
            <LinearLayout
                android:id="@+id/btnSalesHistory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_history"
                    android:contentDescription="@string/Historique" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/Historique"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: Paramètres -->
            <LinearLayout
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="@string/params" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/params"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: FAQ -->
            <LinearLayout
                android:id="@+id/btnFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_faq"
                    android:contentDescription="@string/faq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faq"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: À propos de -->
            <LinearLayout
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_about"
                    android:contentDescription="@string/aProposTitre" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aProposTitre"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: Mentions légales -->
            <LinearLayout
                android:id="@+id/btnLegal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_legal"
                    android:contentDescription="@string/mentionsLegales" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mentionsLegales"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <!-- Barre du bas -->
    <include
        android:id="@+id/include"
        layout="@layout/bottom_tool_bar_boutique"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel" />

    <!-- Panel bas -->
    <View
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
