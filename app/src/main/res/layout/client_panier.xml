<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <View
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:id="@+id/topAppBar"
        layout="@layout/client_top_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/topPanel" />

    <!-- Barre de recherche -->
    <androidx.appcompat.widget.SearchView
        android:id="@+id/barreRecherche"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        app:queryHint="@string/rechercher"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@color/purple_51" />

    <!-- Titre Panier -->
    <TextView
        android:id="@+id/titlePanier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Votre panier"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/barreRecherche"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <View
        android:id="@+id/espace"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/titlePanier"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints" />


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/espace"
        app:layout_constraintBottom_toTopOf="@id/btnPayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/totalPanier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valeur totale : 490,00 $"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/btnPayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"/>

    <!-- Bouton Payer -->
    <Button
        android:id="@+id/btnPayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payer"
        android:backgroundTint="#E5C5F0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/include"
        android:layout_margin="16dp"/>

    <!-- Barre du bas -->
    <include
        android:id="@+id/include"
        layout="@layout/client_bottom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel" />

    <!-- Panel bas -->
    <View
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
