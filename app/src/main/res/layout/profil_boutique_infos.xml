<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Titre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDEEFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sous-titre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mesInfos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="8dp" />

            <!-- Image de profil -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/account"
                android:layout_marginTop="12dp" />

            <!-- Infos vendeur -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <!-- Nom boutique -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#EECFF7"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/nom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/fleurCie"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifNom"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifNomBoutique"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- E-mail -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#F5D7F9"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mailBoutique"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifEmail"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifMail"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- Téléphone -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#EECFF7"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/tel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/telBoutique"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifTel"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifTel"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- Identifiant -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#F5D7F9"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/idBoutique"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifId"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifId"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- Mot de Passe -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#EECFF7"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/mdp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mdpBoutique"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifMdp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifMdp"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- Ligne de séparation -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#C0C0C0"
                    android:layout_marginVertical="8dp" />

                <!-- Forme juridique -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#F5D7F9"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/formeJuridique"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/formeJurBoutique"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifFormeJuridique"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifFormeJur"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- Numéro SIRET -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#EECFF7"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/siret"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/numSiretBoutique"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifSiret"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifSiret"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- Siège social -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#F5D7F9"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/siegeSocial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/siegeSocialBoutique"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifSiegeSocial"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifAdresse"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- Pays -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#EECFF7"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/paysEnregitrement"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/paysBoutique"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifPaysEnregistrement"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifPays"
                        android:padding="2dp" />
                </LinearLayout>

                <!-- IBAN -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="#F5D7F9"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/iban"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/iban"
                        android:textSize="16sp" />

                    <ImageButton
                        android:id = "@+id/BtnModifIban"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_edit"
                        android:contentDescription="@string/modifIban"
                        android:padding="2dp" />
                </LinearLayout>

            </LinearLayout>



            <!-- Bouton suppression -->
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/supprBoutique"
                android:background="#FAD3F9"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
