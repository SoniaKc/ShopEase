<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Status Bar -->
    <View
    android:id="@+id/topPanel"
    android:layout_width="match_parent"
    android:layout_height="15dp"
    android:background="@color/purple_50"
    app:layout_constraintTop_toTopOf="parent" />

    <!-- Top bar -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/top_tool_bar_boutique"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topPanel" />

    <!-- Image profil -->
    <ImageView
        android:id="@+id/profilePhoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/picture_client"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:background="@drawable/circle_background"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"/>

    <!-- Message de bienvenue -->
    <TextView
        android:id="@+id/bienvenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bienvenue"
        android:textSize="20sp"
        android:textColor="#1E1E1E"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintTop_toBottomOf="@id/profilePhoto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"/>

    <!-- Liste des options -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/bienvenue"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Mes informations -->
            <LinearLayout
                android:id="@+id/infos"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes informations"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9"/>

            <!-- Mes adresses -->
            <LinearLayout
                android:id="@+id/addresses"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mes adresses"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E"/>
            </LinearLayout>

            <!-- Historique des achats -->
            <LinearLayout
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_carte"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Historique des achats"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E"/>
            </LinearLayout>

            <!-- ... Répétez le même pattern pour les autres options ... -->

            <!-- Paramètres -->
            <LinearLayout
                android:id="@+id/btnSettings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="@string/params" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/params"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: FAQ -->
            <LinearLayout
                android:id="@+id/btnFaq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_faq"
                    android:contentDescription="@string/faq" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/faq"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: À propos de -->
            <LinearLayout
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_about"
                    android:contentDescription="@string/aProposTitre" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/aProposTitre"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#D1C4E9" />

            <!-- Item: Mentions légales -->
            <LinearLayout
                android:id="@+id/btnLegal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#E8DAF8"
                android:gravity="center_vertical"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_legal"
                    android:contentDescription="@string/mentionsLegales" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/mentionsLegales"
                    android:layout_marginStart="16dp"
                    android:textSize="16sp"
                    android:textColor="#1E1E1E" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Barre de navigation du bas -->
    <include
        android:id="@+id/include"
        layout="@layout/bottom_tool_bar_boutique"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel" />

    <!-- Panel bas -->
    <View
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>