<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Status Bar -->
    <View
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top bar -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/client_top_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topPanel" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintTop_toBottomOf="@id/topAppBar">

        <!-- Settings Header -->
        <TextView
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="50dp"
            android:text="@string/params"
            android:textColor="#000000"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/cleMolette"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:padding="15dp"
            android:src="@drawable/clefmolette" />


        <TextView
            android:id="@+id/rowLangue"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/alterne1"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="@string/paramLangue"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spinnerLangue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Option 2: Cookies -->
        <TextView
            android:id="@+id/rowCookies"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/alterne2"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="@string/paramCookie"
            android:textColor="@color/black"
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/spinnerCookies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <!-- Option 3: Notifications -->
        <TextView
            android:id="@+id/rowNotifications"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:background="@color/alterne1"
            android:gravity="center_vertical"
            android:paddingStart="24dp"
            android:text="@string/paramNotifs"
            android:textColor="#000000"
            android:textSize="22sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Supprimer le compte (Button) -->
        <Button
            android:id="@+id/deleteAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#CC185A"
            android:text="@string/supprCompte"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <!-- Barre du bas -->
    <include
        android:id="@+id/include"
        layout="@layout/client_bottom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel" />

    <!-- Panel bas -->
    <View
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
