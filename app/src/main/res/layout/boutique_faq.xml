<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Barre de statut -->
    <View
        android:id="@+id/topPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Barre supérieure incluse -->
    <include
        android:id="@+id/topAppBar"
        layout="@layout/client_top_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topPanel" />

    <!-- Espace haut -->
    <View
        android:id="@+id/espacehaut"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/topAppBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Titre -->
    <TextView
        android:id="@+id/titre"
        android:layout_width="0dp"
        android:layout_height="53dp"
        android:text="@string/FAQBoutique"
        android:textSize="32sp"
        android:textColor="#000000"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/espacehaut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Espace sous le titre -->
    <View
        android:id="@+id/espace"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/titre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Zone Scrollable pour les options -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/espace"
        app:layout_constraintBottom_toTopOf="@id/include"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/rowLangue"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="#F0DDEF"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="@string/Q1B"
                android:textColor="#000000"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/rowCookies"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="#E4CAE5"
                android:text="@string/Q2B"
                android:textSize="22sp"
                android:paddingStart="24dp"
                android:gravity="center_vertical"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/rowNotifications"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:background="#F0DDEF"
                android:gravity="center_vertical"
                android:paddingStart="24dp"
                android:text="@string/Q3B"
                android:textColor="#000000"
                android:textSize="22sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Barre inférieure incluse -->
    <include
        android:id="@+id/include"
        layout="@layout/client_bottom_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomPanel" />

    <!-- Panneau bas -->
    <View
        android:id="@+id/bottomPanel"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/purple_50"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
